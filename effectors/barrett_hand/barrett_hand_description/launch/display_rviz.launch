<launch>
	<arg name="model" default="simple_barrett_hand.xacro"/>
	<param name="robot_description" command="$(find xacro)/xacro.py '$(find barrett_hand_description)/model/$(arg model)'" />
	<arg name="rvizconfig" default="$(find barrett_hand_description)/rviz/config.rviz" />
	<param name="use_gui" value="true"/>
	<node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />
  	<node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher" />
  	<node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" />
</launch>
