<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="lbh_barrett_hand_robot">
	
  <!-- define PI variable -->
  <xacro:property name="pi" value="3.1415926535897931" />

  <!-- Create Barrett Hand -->
  <!-- Available choices: bh282.urdf.xacro, bh280.urdf.xacro -->	
  <xacro:include filename="$(find barrett_hand_description)/urdf/bh280.urdf.xacro" />

  <xacro:macro name="barrett_hand" params="parent name *origin">
		<xacro:bhand_macro name="${name}" parent="${parent}">
		    <insert_block name="origin"/>
	    </xacro:bhand_macro>
  </xacro:macro>

  <link name="kuka_lwr_left_7_link"/>
  <xacro:barrett_hand parent="kuka_lwr_left_7_link" name="lbh"  >
	<origin xyz="0 0 0" rpy="0 0 ${pi}"/>
  </xacro:barrett_hand>
 
</robot>
